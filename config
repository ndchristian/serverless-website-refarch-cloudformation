
set -e

while getopts e:*: option
do
	case "${option}"
	in
	e) ENVIRONMENT=${OPTARG};;
	*) # Handles unassigned arguments 
	esac
done

# Global Variables

APPLICATION=''
BUSINESSUNIT=''

# Environment Variables
