fi
if [[ $ENVIRONMENT == "stage" ]];
then
	ACMCERTIFICATIONARN=''
	DOMAINNAME=''
	HOSTEDZONEID=''
	POC=''
	REGION=''
	SECONDARY_REGION=''
	PRIMARY_LAMBDA_BUCKET=''
